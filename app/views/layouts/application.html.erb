		</header>
	</div>
	<div id="main" class="wrapper">
<!--		<aside>
			<h3>Something aside</h3>
		</aside>-->
		<article>

			<% flash.each do |name, msg| %>
			  <%= content_tag :div, msg, :id => "flash_#{name}" %>
			<% end %>
			<%= content_tag :h1, yield(:title) if show_title? %>
			<%= yield %>

		</article>
	</div>
	<div id="footer-container">
		<footer class="wrapper">
			<h3>A nice footer</h3>
		</footer>
	</div>
